---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: '{{ ansible_operator_meta.name }}-django'
  namespace: '{{ ansible_operator_meta.namespace }}'
  labels:
    component: squest
spec: 
  strategy:
    type: Recreate
  replicas: 1
  selector:
    matchLabels:
      app: squest
  template:
    metadata:
      labels:
        app: squest
    spec:
      securityContext:
        fsGroup: 999
      hostAliases:
      - ip: 127.0.0.1
        hostnames:
        - "django" # to match nginx config
{% if django_node_selector %}
      nodeSelector:
        {{ django_node_selector | indent(width=8) }}
{% elif node_selector %}
      nodeSelector:
        {{ node_selector | indent(width=8) }}
{% endif %}
      containers:
      - name: django
        resources: {{ django_resource_requirements }}
        command: ['/bin/bash', '-c']
        args:
          - |
            echo "Wait for required services to start"
            /wait
            echo "Starting web server"
            gunicorn --bind 0.0.0.0:8000 --pythonpath /app/squest Squest.wsgi
        image: '{{ django_image }}'
        envFrom:
        - configMapRef:
            name: '{{ ansible_operator_meta.name }}-django-cm'
        ports:
        - containerPort: 8000
          name: django
{% if django_persistence_enabled | bool %}
        volumeMounts: 
        - name: django-media
          mountPath: /app/media
{% endif %}
      - name: nginx
        command: ["nginx", "-c", "/etc/nginx/squest/nginx.conf"]
        image: nginx:1.23.4-alpine
        envFrom:
        - configMapRef:
            name: '{{ ansible_operator_meta.name }}-django-cm'
        ports:
        - containerPort: 8080
          name: nginx
        volumeMounts: 
        - name: nginx-config
          mountPath: /etc/nginx/squest
{% if django_persistence_enabled | bool %}
        - name: django-static
          mountPath: /app/static
          readOnly: true
        - name: django-media
          mountPath: /app/media
          readOnly: true
{% endif %}
      volumes:
      - name: nginx-config
        configMap:
          name: {{ ansible_operator_meta.name }}-django-nginx-cm
          items:
            - key: nginx.conf
              path: nginx.conf
{% if django_persistence_enabled | bool %}
      - name: django-static
        persistentVolumeClaim:
          claimName: {{ ansible_operator_meta.name }}-django-static-pvc
      - name: django-media
        persistentVolumeClaim:
          claimName: {{ ansible_operator_meta.name }}-django-media-pvc
{% endif %}

---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: squest
  name: '{{ ansible_operator_meta.name }}-django-svc'
  namespace: '{{ ansible_operator_meta.namespace }}'
spec:
  ports:
    - name: nginx
      port: 8080
      targetPort: nginx
  selector:
    app: squest
